# see https://github.com/rochus-keller/BUSY/

let static_libs : Product[] = [ # order is relevant
	^static_sewer_lib 
	^static_osbs_lib 
	^static_core_lib 
	^static_geom2d_lib 
	^static_draw2d_lib 
	^static_osgui_lib 
	^static_gui_lib 
	^static_osapp_lib  ]
	
let shared_libs : Product[] = [ # order not relevant
	^shared_osbs_lib 
	^shared_geom2d_lib 
	^shared_draw2d_lib 
	^shared_osgui_lib 
	^shared_core_lib 
	^shared_gui_lib 
	^shared_sewer_lib 
	^shared_osapp_lib  ]

let fractals * : Executable {
	.sources = [ 
		./fractals.c 
	]
	if false {
		#.deps += ^static_all_lib;
		.deps += static_libs;
		.configs += ^use_nappgui_static
	} else {
		#.deps += shared_libs;
		.deps += ^shared_all_lib;
		.configs += ^use_nappgui
	}
}
