# see https://github.com/rochus-keller/BUSY/

subdir gtk3
subdir osx
subdir win

let sources * : SourceSet {
	.sources = [
    	./osgui.cpp
    	./osguictx.c
	]
	.configs += ^main_config
	if target_os == `linux {
		.deps += [ gtk3.sources ]
	}else if target_os == `win32 {
		.deps += [ win.sources ]
	}else if target_os == `macos {
		.deps += [ osx.sources ]
	}else {
		error("target os not supported")
	}
}
