# see https://github.com/rochus-keller/BUSY/

var config - : Config {
	if ^HAVE_SHARED {
		.defines += "NAPPGUI_SHARED_LIB"
		if !^HAVE_ALLINONE {
			.defines += "DRAW2D_IMPORT"
		}
	}
}

submod gtk3
submod osx
submod win

let sources * : SourceSet {
	.sources = [
    	./osgui.c
    	./osguictx.c
	]
	.configs += [ ^main_config config ]
	if target_os == `linux {
		.deps += gtk3.sources
	}else if target_os == `win32 {
		.deps += win.sources
	}else if target_os == `macos {
		.deps += osx.sources
	}else {
		error("target os not supported")
	}
}
