# see https://github.com/rochus-keller/BUSY/

submod gtk3
submod osx
submod win

let sources * : SourceSet {
	.sources = [
    	./osgui.c
    	./osguictx.c
	]
	.configs += ^main_config
	if target_os == `linux {
		.deps += gtk3.sources
	}else if target_os == `win32 {
		.deps += win.sources
	}else if target_os == `macos {
		.deps += osx.sources
	}else {
		error("target os not supported")
	}
}
